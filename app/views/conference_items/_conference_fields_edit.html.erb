
    <%= hidden_field_tag(:pid, @pid) %>
    <%= hidden_field_tag(:redirect_field, flash[:redirect_field]) %>

    <% if conference.nil? %>
        <% conference.build %>
    <% end %>

    <% if conference.conferenceProceeding.empty? %>
        <% conference.conferenceProceeding.build %>
    <% end %>
    <% if  conference.conferenceProceeding.first.conferenceProceedingAttributor.empty? %>
        <%   conference.conferenceProceeding.first.conferenceProceedingAttributor.build %>
    <% end %>

    <%# conference.each do |c| %>
        <% unless conference.workflows.first.nil? %>
            <% @wf = conference.workflows.first %>
            <% @wf_id = @wf.rdf_subject.to_s %>
            <% @currentStatus = @wf.current_status %>
        <% else %>
            <% conference.workflows.build %>
            <% @wf = conference.workflows.first %>
            <% @wf_id = nil %>
            <% @currentStatus = Sufia.config.draft_status %>
        <% end %>
            <%= f.fields_for :workflows, @wf do |f_wf| %>
            <% unless @wf_id.nil? %>
                <%= f_wf.hidden_field :id, :value => @wf_id, :id => "workflow_submit_id" %>
            <% end %>
    
    
            <div class="content-box padding-0">
            <h4 class="padding-side-25">About the conference</h4>
            <div class="padding-0">
                <%= render partial: "conference_describe_fields_edit",  :locals => { :f => f,  :conference => conference } %>
                <%#= render partial: "conference_describe_fields_edit", as: :conference, :locals => { :f => f } %>
                <%#= render partial: "conference_describe_fields_edit", :locals => { :f => f, :conference => conference } %>
            </div>
        </div>
    
    
        <div class="content-box padding-0">
            <h4 class="padding-side-25">
                Add conference proceeding information to your conference
            </h4>
            <div class="padding-0">
                <%= render partial: "conference_proceeding_fields_edit",  :locals => { :f => f, :conference => conference } %>
            </div>
        </div>
        
        
            <div class="content-box padding-0">
                <h4 class="padding-side-25">
                    About you
                </h4>
                <div class="padding-0">
                    <%= render partial: 'shared/creation_activity_fields_edit', :locals => { :f => f, :creation => conference.creation, :label => "creator", :required => true } %>
                </div>
            </div>
    
    
        <% if can? :review, :all %>
            <!-- <section class="form-step"> -->
            <div class="content-box padding-0">
                <h4 class="padding-side-25">
                    Review workflow
                </h4>
                <div class="padding-25 no-pad-top no-pad-bottom">
                    <%= render partial: 'shared/workflow_edit', :locals => { :f => f, :article => conference, :wf => @wf, :f_wf => f_wf,  :doi_registered => conference.doi_registered?, :currentStatus => @currentStatus  } %>
                </div>
            </div>
    
            <div class="content-box padding-0">
                <div class="padding-25 no-pad-top no-pad-bottom">
                    <%= render partial: "shared/workflow_show", :locals => { :article => conference } %>
                </div>
            </div>
    
            <% if !conference.permissions.nil? && !conference.permissions.empty? %>
                <div class="content-box padding-0">
                    <div class="content-box-header expand-header">
                        <div class="space-right">Set permissions</div>
                    </div>
                    <div class="expand-content">
                        <%= render partial: "shared/permissions_edit", :locals => {:f => f, :permissions => conference.permissions, :depositor => conference.workflowMetadata.depositor[0]} %>
                    </div>
                </div>
            <% end %>
        <% end %>
    <%# end %>
